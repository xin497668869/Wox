<UserControl x:Class="Wox.Plugin.Switcheroo.SwitcherooSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wox.Plugin.Switcheroo"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" Loaded="UserControl_Loaded">
    <Grid>
        <CheckBox x:Name="cbOverrideAltTab" Content="Override Alt Tab with Switcheroo" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbSwapTitleAndSubtitle" Content="Swaps the title and subtitle in the results" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="cbApplicationNameFirst" Content="Display the application name first" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="label" Text="Main Switcharoo GitHub page" HorizontalAlignment="Right" VerticalAlignment="Bottom" Foreground="DodgerBlue" TextDecorations="Underline" MouseUp="label_MouseUp"  />
        
    </Grid>
</UserControl>
